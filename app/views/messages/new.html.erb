<%= form_for @message do |f|%>
  <%= f.label :body %>
  <%= f.text_field :body %>
  <%= f.label :from %>
  <%= f.text_field :from %>
  <%= f.label :to %>
  <% Contact.all.each do |contact| %>
    <%= check_box_tag 'contacts[]',  contact.id %>
    <%= h contact.name %>
  <% end %>
  <%= f.submit %>
<%end%>
